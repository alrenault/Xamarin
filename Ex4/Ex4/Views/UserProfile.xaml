<?xml version="1.0" encoding="UTF-8"?>
<TabbedPage
    xmlns:mvvm="clr-namespace:Storm.Mvvm.Forms;assembly=Storm.Mvvm.Forms"
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Ex4.Views.UserProfile"
    xmlns:vm="clr-namespace:Ex4.ViewModels"
    x:DataType="vm:UserProfileViewModel"
>
    <mvvm:BaseContentPage Icon="Info_icon.png">
        <NavigationPage.TitleView>
            <Label 
            Text="{Binding TitleLabel}"
            FontAttributes="Bold"
            FontSize="20"/>
        </NavigationPage.TitleView>

        <StackLayout>
            <Label
                Text="Prénom"
                FontAttributes="Bold"
                FontSize="25"
                TextColor="Black"
                HorizontalTextAlignment="Center"/>
            <Label 
                Text="{Binding User.FirstName}"
                HorizontalTextAlignment="Center"
                FontSize="15"/>

            <Label
                Text="Nom"
                FontAttributes="Bold"
                FontSize="25"
                TextColor="Black"
                HorizontalTextAlignment="Center"/>
            <Label 
                Text="{Binding User.LastName}"
                HorizontalTextAlignment="Center"
                FontSize="15"/>

            <Label
                Text="Email"
                FontAttributes="Bold"
                FontSize="25"
                TextColor="Black"
                HorizontalTextAlignment="Center"/>
            <Label 
                Text="{Binding User.Email}"
                HorizontalTextAlignment="Center"
                FontSize="15"/>

            <Label
                Text="Image de profil"
                FontAttributes="Bold"
                FontSize="25"
                TextColor="Black"
                HorizontalTextAlignment="Center"/>
            <Image 
                VerticalOptions="Center"
                HeightRequest="96"
                WidthRequest="96"
                Source="{Binding User.ImageSrc}"
                HorizontalOptions="Center"
                Margin="0,10,0,0"/>
        </StackLayout>
    </mvvm:BaseContentPage>

    <mvvm:BaseContentPage Icon="icon_password.png">
        <StackLayout>
            <Label 
                Text="Ancien mot de passe"
                FontAttributes="Bold"
                TextColor="Black"
                FontSize="20"/>
            <Entry 
                Text="{Binding OldPassword, Mode=TwoWay}" 
                IsPassword="true" 
                Placeholder="Ancien mot de passe"/>

            <Label 
                Text="Votre nouveau mot de passe"
                FontAttributes="Bold"
                TextColor="Black"
                FontSize="20"/>
            <Entry 
                Text="{Binding NewPassword, Mode=TwoWay}" 
                IsPassword="true" 
                Placeholder="Nouveau mot de passe"/>

            <Label 
                Text="Repeter votre nouveau mot de passe"
                FontAttributes="Bold"
                TextColor="Black"
                FontSize="20"/>
            <Entry 
                Text="{Binding NewPasswordBis, Mode=TwoWay}" 
                IsPassword="true" 
                Placeholder="Nouveau mot de passe"/>

            <Button 
                Text="Valider" 
                Command="{Binding PatchPassword}"/>
        </StackLayout>
    </mvvm:BaseContentPage>
</TabbedPage>